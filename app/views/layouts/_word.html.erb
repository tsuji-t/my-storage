<div class="word">
  <%= link_to word.tug, word_path(word.id), class: :word__tug %>
  <div class="card__body">
    <%= link_to word.title, word_path(word.id), class: :word__title%>
    <div class="date-user">
      <p class="word__created">
        <%= l word.created_at %>
      </p>
      <div class="edit_user">
      <% if user_signed_in? && current_user.id == word.user.id %>
          <%= link_to "編集", edit_word_path(word.id), class: :index_edit %>
        <% end %>
      <%= link_to "投稿者 #{word.user.nickname}", user_path(word.user_id), class: :card__user %>
      </div>
    </div>
  </div>
</div>
