<main class="main">
  <div class="inner main-inner">
    <%# ログインしているときは以下を表示する %>
      <% if user_signed_in?%>
       <div class="greeting">
         こんにちは、
        <%= link_to "#{current_user.nickname}さん", user_path(current_user.id), class: :greeting__link %>
      </div>
      <% end %>


    <div class="word__wrapper">
      <h2 class="word index">
        <%= "「#{@user.nickname}」さんの投稿一覧" %>
      </h2>

      <div class="tab-panel">
        <!--タブ-->
        <ul class="tab-group">
          <li class="tab tab-A is-active">記事</li>
          <li class="tab tab-B">コメント</li>
          <% if current_user.id == @user.id%>
            <li class="tab tab-C">お気に入り</li>
          <% end %>
        </ul>
	
      	<!--タブを切り替えて表示するコンテンツ-->
        <div class="panel-group">
          <div class="panel tab-A is-show">
            <% if @words.empty? %>
              <h2 class="word index">記事投稿はありません。
              </h2>
            <% else %>
              <%= render partial: 'layouts/word', collection: @words %>
            <% end %>
          </div>

          <div class="panel tab-B">
            <% if @comments.empty? %>
              <h2 class="word index">コメント投稿はありません。
              </h2>
            <% else %>
              <%= render partial: 'layouts/comment', collection: @comments %>
            <% end %>
          </div>

          <div class="panel tab-c">
            <% if @favorites.empty? %>
              <h2 class="word index">お気に入り登録した記事はありません。
              </h2>
            <% else %>
              <% @favorites.each do |favorite| %>
                <div class="word">
                  <%= link_to favorite.word.tug, word_path(favorite.word.id), class: :word__tug %>
                  <div class="card__body">
                    <%= link_to favorite.word.title, word_path(favorite.word.id), class: :word__title%>
                    <div class="date-user">
                      <div class="word__created">
                      <%= l favorite.word.created_at %>
                      </div>
                      <div class="edit_user">
                        <% if user_signed_in? && current_user.id == favorite.word.user.id %>
                          <%= link_to "編集", edit_word_path(favorite.word.id), class: :index_edit %>
                        <% end %>
                        <%= link_to "投稿者 #{favorite.word.user.nickname}", user_path(favorite.word.user_id), class: :card__user %>
                      </div>
                    </div>
                  </div>
                </div>
              <%end%>
            <% end %>
          </div>

        </div>
      </div>


      
    </div>

  </div>
  <%= render partial: "layouts/side_ber",locals: { words: @side_words } %>
</main>