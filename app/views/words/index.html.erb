<main class="main">
  <div class="inner main-inner">
    <%# ログインしているときは以下を表示する %>
      <% if user_signed_in?%>
       <div class="greeting">
         こんにちは、
        <%= link_to "#{current_user.nickname}さん", root_path, class: :greeting__link %>
      </div>
      <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="word__wrapper">
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
      <h2 class="word index">新着一覧</h2>
      <%= render partial: 'word', collection: @words %>
    </div>
  </div>
  <%= render partial: "layouts/side_ber",locals: { words: @side_words } %>
</main>
